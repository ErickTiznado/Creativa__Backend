# .env.example
# IMPORTANTE: Copia este archivo a un archivo llamado '.env' y rellena los valores reales.

# ------------------------------------------------------------------
# Configuración de Servidor
# ------------------------------------------------------------------
# Puerto donde correrá el servidor (Por defecto: 3000)
PORT=3000

# Entorno de ejecución (opcional)
NODE_ENV=development

# Clave secreta para firmar/verificar tokens (JWT) en Nicola Framework.
# Debe ser una cadena larga y compleja y NO debe compartirse.
NICOLA_SECRET=tu_secreto_super_seguro_aqui

# ------------------------------------------------------------------
# Configuración de Base de Datos (Supabase)
# ------------------------------------------------------------------
# URL de conexión a tu proyecto de Supabase
SUPABASE_URL=https://tu-proyecto.supabase.co

# Llave anónima (anon public key) de Supabase.
# Se encuentra en Project Settings -> API.
SUPABASE_KEY=tu_supabase_anon_key_aqui

# ------------------------------------------------------------------
# Google Cloud (Vertex AI + Storage)
# ------------------------------------------------------------------
# Ruta al JSON del Service Account.
# Windows: C:\\ruta\\a\\service-account.json
GOOGLE_APPLICATION_CREDENTIALS=C:\\ruta\\a\\service-account.json

# ID del proyecto en Google Cloud
GOOGLE_PROJECT_ID=tu-project-id

# Región (opcional). Default: us-central1
GOOGLE_LOCATION=us-central1

# Bucket de Cloud Storage usado por el adaptador/servicios
GCS_BUCKET_NAME=tu-bucket

# URL pública base (opcional). Si no se define: https://storage.googleapis.com/<bucket>
GCS_PUBLIC_URL=